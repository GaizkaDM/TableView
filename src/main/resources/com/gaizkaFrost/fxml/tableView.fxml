<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" spacing="10" stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gaizkaFrost.controlador.ControladorVentana">
   <MenuBar prefHeight="33.0" prefWidth="500.0">
     <menus>
       <Menu mnemonicParsing="false" text="File">
         <items>
           <MenuItem mnemonicParsing="false" text="Close" />
         </items>
       </Menu>
       <Menu mnemonicParsing="false" text="Edit">
         <items>
           <MenuItem mnemonicParsing="false" text="Delete" />
         </items>
       </Menu>
       <Menu mnemonicParsing="false" text="Help">
         <items>
           <MenuItem mnemonicParsing="false" text="About" />
         </items>
       </Menu>
     </menus>
   </MenuBar>

    <HBox spacing="10">
        <Label text="First Name:" />
        <TextField fx:id="txtFirstName" promptText="First Name" />
        <Button onAction="#handleAdd" text="Add" />
    </HBox>

    <HBox spacing="10">
        <Label text="Last Name:" />
        <TextField fx:id="txtLastName" promptText="Last Name" />
    </HBox>

    <HBox spacing="10">
        <Label text="Birth Date:" />
        <DatePicker fx:id="datePicker" />
    </HBox>

    <HBox spacing="10">
        <Button onAction="#handleRestore" text="Restore Rows" />
        <Button onAction="#handleDelete" text="Delete Selected Rows" />
    </HBox>

    <TableView fx:id="tableView" prefHeight="300" prefWidth="500" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colId" prefWidth="50" text="Id" />
            <TableColumn fx:id="colFirstName" prefWidth="120" text="First Name" />
            <TableColumn fx:id="colLastName" prefWidth="120" text="Last Name" />
            <TableColumn fx:id="colBirthDate" prefWidth="120" text="Birth Date" />
        </columns>
    </TableView>

</VBox>
