<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.CustomMenuItem?>
<VBox alignment="TOP_CENTER" spacing="10" stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gaizkaFrost.controlador.ControladorVentana" >
   <MenuBar prefHeight="33.0" prefWidth="500.0">
     <menus>
         <Menu text="%file" mnemonicParsing="true">
             <CustomMenuItem fx:id="menuClose" onAction="#handleClose">
                 <content>
                     <Label text="%close" mnemonicParsing="true">
                         <tooltip>
                             <Tooltip text="Cierra la aplicación (Ctrl + W)"/>
                         </tooltip>
                     </Label>
                 </content>
             </CustomMenuItem>
         </Menu>

         <Menu text="%help" mnemonicParsing="true">
             <CustomMenuItem fx:id="menuAbout" onAction="#handleAbout">
                 <content>
                     <Label text="%about" mnemonicParsing="true">
                         <tooltip>
                             <Tooltip text="Muestra autor y versión (F1)"/>
                         </tooltip>
                     </Label>
                 </content>
             </CustomMenuItem>
         </Menu>
     </menus>
   </MenuBar>

    <HBox spacing="10">
        <Label text="First Name:" />
        <TextField fx:id="txtFirstName" promptText="First Name">
         <tooltip>
            <Tooltip text="Nombre" />
         </tooltip></TextField>
        <Button onAction="#handleAdd" text="Add">
         <tooltip>
            <Tooltip text="Añadir a la lista" />
         </tooltip></Button>
    </HBox>

    <HBox spacing="10">
        <Label text="Last Name:" />
        <TextField fx:id="txtLastName" promptText="Last Name">
         <tooltip>
            <Tooltip text="Apellido" />
         </tooltip></TextField>
    </HBox>

    <HBox spacing="10">
        <Label text="Birth Date:" />
        <DatePicker fx:id="datePicker">
         <tooltip>
            <Tooltip text="Fecha de nacimiento" />
         </tooltip></DatePicker>
    </HBox>

    <HBox spacing="10">
        <Button onAction="#handleRestore" text="Restore Rows">
         <tooltip>
            <Tooltip text="restaurar cambios" />
         </tooltip></Button>
        <Button onAction="#handleDelete" text="Delete Selected Rows">
         <tooltip>
            <Tooltip text="Borrar filas seleccionadas" />
         </tooltip></Button>
    </HBox>

    <TableView fx:id="tableView" prefHeight="300" prefWidth="500" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colId" prefWidth="50" text="Id" />
            <TableColumn fx:id="colFirstName" prefWidth="120" text="First Name" />
            <TableColumn fx:id="colLastName" prefWidth="120" text="Last Name" />
            <TableColumn fx:id="colBirthDate" prefWidth="120" text="Birth Date" />
        </columns>
    </TableView>

</VBox>
